{
    "dashboard": {
        "title": "RAG Pipeline Monitoring",
        "tags": [
            "rag",
            "pipeline",
            "customer-service"
        ],
        "timezone": "browser",
        "schemaVersion": 16,
        "version": 0,
        "refresh": "10s",
        "panels": [
            {
                "id": 1,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                },
                "type": "graph",
                "title": "Query Processing Rate",
                "targets": [
                    {
                        "expr": "rate(rag_queries_total[5m])",
                        "legendFormat": "Queries/sec",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Queries/sec"
                    },
                    {
                        "format": "short"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                }
            },
            {
                "id": 2,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                },
                "type": "graph",
                "title": "Query Processing Latency",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(rag_query_duration_seconds_bucket[5m]))",
                        "legendFormat": "p95",
                        "refId": "A"
                    },
                    {
                        "expr": "histogram_quantile(0.50, rate(rag_query_duration_seconds_bucket[5m]))",
                        "legendFormat": "p50",
                        "refId": "B"
                    }
                ],
                "yaxes": [
                    {
                        "format": "s",
                        "label": "Latency"
                    },
                    {
                        "format": "short"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                }
            },
            {
                "id": 3,
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 0,
                    "y": 8
                },
                "type": "stat",
                "title": "Total Queries (24h)",
                "targets": [
                    {
                        "expr": "increase(rag_queries_total[24h])",
                        "refId": "A"
                    }
                ],
                "options": {
                    "graphMode": "area",
                    "colorMode": "value"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "short"
                    }
                }
            },
            {
                "id": 4,
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 8,
                    "y": 8
                },
                "type": "stat",
                "title": "Deflection Ratio",
                "targets": [
                    {
                        "expr": "sum(increase(rag_routing_decisions_total{decision=\"auto_response\"}[24h])) / sum(increase(rag_routing_decisions_total[24h])) * 100",
                        "refId": "A"
                    }
                ],
                "options": {
                    "graphMode": "area",
                    "colorMode": "value"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "percent",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 50,
                                    "color": "yellow"
                                },
                                {
                                    "value": 70,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 5,
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 16,
                    "y": 8
                },
                "type": "stat",
                "title": "Average Confidence Score",
                "targets": [
                    {
                        "expr": "avg(rag_confidence_score)",
                        "refId": "A"
                    }
                ],
                "options": {
                    "graphMode": "area",
                    "colorMode": "value"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "percentunit",
                        "max": 1,
                        "min": 0
                    }
                }
            },
            {
                "id": 6,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 16
                },
                "type": "graph",
                "title": "Routing Decisions",
                "targets": [
                    {
                        "expr": "rate(rag_routing_decisions_total{decision=\"auto_response\"}[5m])",
                        "legendFormat": "Auto Response",
                        "refId": "A"
                    },
                    {
                        "expr": "rate(rag_routing_decisions_total{decision=\"human_handoff\"}[5m])",
                        "legendFormat": "Human Handoff",
                        "refId": "B"
                    }
                ],
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Decisions/sec"
                    },
                    {
                        "format": "short"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                },
                "stack": true
            },
            {
                "id": 7,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 16
                },
                "type": "piechart",
                "title": "Sentiment Distribution",
                "targets": [
                    {
                        "expr": "sum by (sentiment) (increase(rag_sentiment_total[1h]))",
                        "refId": "A"
                    }
                ],
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    },
                    "pieType": "donut",
                    "displayLabels": [
                        "name",
                        "percent"
                    ]
                }
            },
            {
                "id": 8,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 24
                },
                "type": "graph",
                "title": "Pipeline Stage Latency",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(rag_pipeline_stage_duration_seconds_bucket{stage=\"preprocessing\"}[5m]))",
                        "legendFormat": "Preprocessing p95",
                        "refId": "A"
                    },
                    {
                        "expr": "histogram_quantile(0.95, rate(rag_pipeline_stage_duration_seconds_bucket{stage=\"retrieval\"}[5m]))",
                        "legendFormat": "Retrieval p95",
                        "refId": "B"
                    },
                    {
                        "expr": "histogram_quantile(0.95, rate(rag_pipeline_stage_duration_seconds_bucket{stage=\"decision\"}[5m]))",
                        "legendFormat": "Decision p95",
                        "refId": "C"
                    },
                    {
                        "expr": "histogram_quantile(0.95, rate(rag_pipeline_stage_duration_seconds_bucket{stage=\"response\"}[5m]))",
                        "legendFormat": "Response p95",
                        "refId": "D"
                    }
                ],
                "yaxes": [
                    {
                        "format": "s",
                        "label": "Latency"
                    },
                    {
                        "format": "short"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                }
            },
            {
                "id": 9,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 24
                },
                "type": "graph",
                "title": "HTTP Request Rate by Endpoint",
                "targets": [
                    {
                        "expr": "rate(http_requests_total{job=\"rag-pipeline\"}[5m])",
                        "legendFormat": "{{method}} {{endpoint}} - {{status}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "reqps",
                        "label": "Requests/sec"
                    },
                    {
                        "format": "short"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                }
            },
            {
                "id": 10,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 32
                },
                "type": "graph",
                "title": "Confidence Score Distribution",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(rag_confidence_score_bucket[5m]))",
                        "legendFormat": "p95",
                        "refId": "A"
                    },
                    {
                        "expr": "histogram_quantile(0.75, rate(rag_confidence_score_bucket[5m]))",
                        "legendFormat": "p75",
                        "refId": "B"
                    },
                    {
                        "expr": "histogram_quantile(0.50, rate(rag_confidence_score_bucket[5m]))",
                        "legendFormat": "p50",
                        "refId": "C"
                    },
                    {
                        "expr": "histogram_quantile(0.25, rate(rag_confidence_score_bucket[5m]))",
                        "legendFormat": "p25",
                        "refId": "D"
                    }
                ],
                "yaxes": [
                    {
                        "format": "percentunit",
                        "label": "Confidence Score",
                        "max": 1,
                        "min": 0
                    },
                    {
                        "format": "short"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                }
            },
            {
                "id": 11,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 32
                },
                "type": "graph",
                "title": "Knowledge Base Operations",
                "targets": [
                    {
                        "expr": "rate(rag_kb_documents_ingested_total[5m])",
                        "legendFormat": "Documents Ingested/sec",
                        "refId": "A"
                    },
                    {
                        "expr": "rate(rag_kb_searches_total[5m])",
                        "legendFormat": "Searches/sec",
                        "refId": "B"
                    }
                ],
                "yaxes": [
                    {
                        "format": "ops",
                        "label": "Operations/sec"
                    },
                    {
                        "format": "short"
                    }
                ],
                "xaxis": {
                    "mode": "time"
                }
            }
        ],
        "time": {
            "from": "now-6h",
            "to": "now"
        },
        "timepicker": {
            "refresh_intervals": [
                "5s",
                "10s",
                "30s",
                "1m",
                "5m",
                "15m",
                "30m",
                "1h"
            ]
        }
    }
}